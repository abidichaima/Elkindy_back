pipeline{
agent any
environment {
        registryCredentials = "nexuss"
        registry = "172.16.6.254:8083"
        }
stages {
stage('Install dependencies') {
steps{
script {
sh('npm install --legacy-peer-deps')
}
}
}
/*stage('Unit Test') {
steps{
script {
sh('yarn test')
}
}
}  
       */
        stage('SonarQube Analysis') { 
steps{
script { 
def scannerHome = tool 'scanner' 
withSonarQubeEnv {
sh "${scannerHome}/bin/sonar-scanner" 
}
} 
}
}
stage('Build application') {
steps{
script {
sh('npm run build')
}
}
}
 stage('Building images (node and mongo)') {
            steps{
                script {
                    sh('docker-compose build')
                }
            }
        }
        /* stage('Deploy to Nexus') {
            steps{
                script {
                 docker.withRegistry("http://"+registry,registryCredentials ) {
                    sh('docker push $registry/nodemongoapp:6.0 ')
                             }
                        }
                }
        }*/
      stage('Deploy to Nexus') {
    steps {
        script {
            def NEXUS_USERNAME = 'admin'
            def NEXUS_PASSWORD = '123456789'
            
            docker.withRegistry("http://${registry}", NEXUS_USERNAME, NEXUS_PASSWORD) {
                sh('docker push $registry/nodemongoapp:6.0')
            }
        }
    }
}
          stage('Run application ') {
            steps{ 
                script { 
                    sh('docker-compose up -d ')  
                } 
            } 
        }

       /* stage("Run Prometheus"){
            steps{
                script{
                    sh('docker start 34c5b55e764c ')
                }
            }
        }

        stage("Run Grafana"){ 
            steps{
                script{
                    sh('docker start 90530ff98553')
                }
            }
        }   */

           
}
}